from flask import Flask, render_template_string
import json

app = Flask(__name__)

@app.route('/')
def status():
    try:
        with open('/var/www/status/apps.json', 'r') as f:
            apps = json.load(f)
    except (IOError, ValueError):
        apps = {}

    html = """
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Service Status</title>
        <style>
            body { font-family: sans-serif; margin: 2em; }
            h1 { color: #333; }
            h2 { color: #555; border-bottom: 1px solid #ccc; padding-bottom: 5px; margin-top: 2em;}
            ul { list-style-type: none; padding: 0; }
            li { margin: 1em 0; }
            a { color: #007bff; text-decoration: none; }
            a:hover { text-decoration: underline; }
        </style>
    </head>
    <body>
        <h1>Deployed Services</h1>
        {% raw %}
        {% if apps %}
            {% for app_name, ports in apps.items() %}
                <h2>{{ app_name }}</h2>
                <ul>
                    {% for port_name, host_port in ports.items() %}
                    <li>
                        <strong>{{ port_name | replace('_PORT', '') | lower | capitalize }}:</strong>
                        <a href="http://{{ ansible_host }}:{{ host_port }}" target="_blank">http://{{ ansible_host }}:{{ host_port }}</a>
                    </li>
                    {% endfor %}
                </ul>
            {% endfor %}
        {% else %}
            <p>No applications deployed yet.</p>
        {% endif %}
        {% endraw %}
    </body>
    </html>
    """
    return render_template_string(html, apps=apps, ansible_host=request.host.split(':')[0])

if __name__ == '__main__':
    app.run(host='0.0.0.0', port=5001)

